<div class="container">
  <div class="row">
    <%= form_for [@user, @device], class: "col-md-9 go-right" do |f| %>
      <h2>Add new device</h2>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, id: "name", required: :true %>
      </div>
      <div class="form-group">
        <%#= f.text_field :time, id: "phone", required: :true %>
      </div>
      <div class="form-group">
        <%= f.submit "submit", class: "btn btn-primary" %>
      </div>

    <%end%>
  </div>
</div>
